{
  "name": "credlock",
  "version": "1.0.0",
  "type": "module",
  "description": "Authentication Microservice",
  "main": "dist/server.js",
  "scripts": {
    "prisma:generate": "dotenvx run -f .env.dev -- prisma generate",
    "prisma:generate:prod": "dotenvx run -f .env.prod -- prisma generate",
    "prisma:push": "dotenvx run -f .env.dev -- prisma db push",
    "prisma:pull": "dotenvx run -f .env.dev -- prisma db pull",
    "prisma:migrate": "dotenvx run -f .env.dev -- prisma migrate dev",
    "prisma:migrate:reset": "dotenvx run -f .env.dev -- prisma migrate reset --force",
    "prisma:migrate:prod": "dotenvx run -f .env.prod -- prisma migrate deploy",
    "prisma:studio": "dotenvx run -f .env.dev -- prisma studio",
    "prisma:studio:prod": "dotenvx run -f .env.prod -- prisma studio",
    "dev": "dotenvx run -f .env.dev -- tsx watch src/server.ts",
    "dev:inspect": "dotenvx run -f .env.dev -- tsx --inspect src/server.ts",
    "start": "dotenvx run -f .env.prod -- node dist/server.js",
    "start:inspect": "dotenvx run -f .env.prod -- node --inspect dist/server.js",
    "test": "dotenvx run -f .env.dev -- jest --forceExit",
    "test:coverage": "dotenvx run -f .env.dev -- jest --coverage --forceExit",
    "test:watch": "dotenvx run -f .env.dev -- jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build": "tsc && tsc-esm-fix",
    "check": "npm run lint && npm run test && npm run build",
    "format": "prettier . --write",
    "prepare": "husky"
  },
  "author": "CredLock Team",
  "license": "MIT",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "~6.19.2",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "prisma": "~6.19.2",
    "prom-client": "^15.1.3",
    "winston": "^3.18.3",
    "winston-loki": "^6.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.4",
    "@types/nodemailer": "^7.0.3",
    "@types/passport": "^1.0.17",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/pg": "^8.16.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "3.6.2",
    "prisma": "^6.19.2",
    "ts-jest": "^29.4.5",
    "tsc-esm-fix": "^3.1.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=22.18.0"
  }
}
