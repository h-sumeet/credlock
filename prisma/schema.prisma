generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
  schemas  = ["credlock"]
}

model User {
  id          String    @id @default(uuid()) @db.Uuid
  name        String    @map("name")
  email       String    @unique @map("email")
  phone       String?   @map("phone")
  avatar      String?   @map("avatar")
  provider    String?   @map("provider")
  lastLoginAt DateTime? @map("last_login_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  emailInfo    EmailInfo?
  phoneInfo    PhoneInfo?
  passwordInfo PasswordInfo?
  lockoutInfo  LockoutInfo?
  sessions     Session[]

  @@map("users")
  @@schema("credlock")
}

model EmailInfo {
  id           String    @id @default(uuid()) @db.Uuid
  userId       String    @unique @map("user_id") @db.Uuid
  isVerified   Boolean   @default(false) @map("is_verified")
  token        String?   @map("token")
  tokenExpires DateTime? @map("token_expires")
  pendingEmail String?   @map("pending_email")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token, tokenExpires])
  @@map("email_info")
  @@schema("credlock")
}

model PhoneInfo {
  id           String    @id @default(uuid()) @db.Uuid
  userId       String    @unique @map("user_id") @db.Uuid
  isVerified   Boolean   @default(false) @map("is_verified")
  otp          String?   @map("otp")
  otpExpires   DateTime? @map("otp_expires")
  pendingPhone String?   @map("pending_phone")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("phone_info")
  @@schema("credlock")
}

model PasswordInfo {
  id           String    @id @default(uuid()) @db.Uuid
  userId       String    @unique @map("user_id") @db.Uuid
  hash         String?   @map("hash")
  token        String?   @map("token")
  tokenExpires DateTime? @map("token_expires")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@map("password_info")
  @@schema("credlock")
}

model LockoutInfo {
  id                 String    @id @default(uuid()) @db.Uuid
  userId             String    @unique @map("user_id") @db.Uuid
  lockedUntil        DateTime? @map("locked_until")
  failedAttemptCount Int       @default(0) @map("failed_attempt_count")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("lockout_info")
  @@schema("credlock")
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String   @map("user_id") @db.Uuid
  deviceId     String   @map("device_id")
  refreshToken String   @unique @map("refresh_token")
  userAgent    String?  @map("user_agent")
  ipAddress    String?  @map("ip_address")
  expiresAt    DateTime @map("expires_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, deviceId], name: "user_device_id")
  @@index([refreshToken, expiresAt])
  @@index([userId])
  @@map("sessions")
  @@schema("credlock")
}

model InactiveUser {
  id                 String    @id @default(uuid()) @db.Uuid
  userId             String    @map("user_id") @db.Uuid
  name               String    @map("name")
  email              String    @map("email")
  phone              String?   @map("phone")
  avatar             String?   @map("avatar")
  provider           String?   @map("provider")
  lastLoginAt        DateTime? @map("last_login_at")
  accountUpdatedAt   DateTime  @map("account_updated_at")
  accountCreatedAt   DateTime  @map("account_created_at")
  createdAt          DateTime  @default(now()) @map("created_at")

  @@map("inactive_users")
  @@schema("credlock")
}
